<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="745dp"
        android:layout_marginTop="55dp"
        android:columnCount="2"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:text="Briefing: "
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spin_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:entries="@array/yesno" />

        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:text="Walking: "
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spin_walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:entries="@array/yesno" />

        <TextView
            android:layout_row="2"
            android:layout_column="0"
            android:text="Conscious: "
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spin_conscious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:entries="@array/yesno" />

        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:text="Rate: "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:hint="" />

        <TextView
            android:layout_row="4"
            android:layout_column="0"
            android:text="Capillary Refill: "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_cap_refill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:hint="" />

        <TextView
            android:layout_row="5"
            android:layout_column="0"
            android:text="AVPU: "
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spin_avpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:entries="@array/avpu" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="Send" />

        <TextView
            android:id="@+id/Coordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="1"
            android:text="Coordinates: " />

    </GridLayout>

</android.support.constraint.ConstraintLayout>